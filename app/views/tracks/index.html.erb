<h1>Butter Music Library</h1>

<h3><%= link_to "Upload Tracks", new_track_path %></h3>

<h3><%= link_to "RSS", formatted_tracks_path("rss") %></h3>

<% form_tag tracks_path, :method => 'get' do %>
  <%= text_field_tag :search, @search %>
<% end %> 

<% form_tag edit_multiple_tracks_path do %>
  <table id="tracks_container" class="content alternating tablesorter" summary="Butter Feed Track Listing">
    <thead>
      <th>
        <input type="checkbox" id="all">
      </th>
      <th class="header">
        Title
      </th>
      <th>
        Artist
      </th>
      <th>
        Composer
      </th>
      <th>
        Album
      </th>
      <th>
        Genre
      </th>
      <th>
      </th>
    </thead>
    <tbody id="results">
      <%= render :partial => "track", :collection => @tracks %>
    </tbody>
    </table>
    <p>
      <%= submit_tag "Group Edit Selected", :id => "group_edit_button" %> <%= submit_tag "Delete Selected", :id => "group_delete_button" %>
    </p>
    <p>
      <%= will_paginate @tracks, :params => { :search=> @search } %>
      <%= pageless(@tracks.total_pages, tracks_path) %>
    </p>
  </div>
  
<% end %>
