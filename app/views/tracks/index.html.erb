<% form_tag edit_multiple_tracks_path do %>
  <div id="tracks_container">
    <table>
      <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= check_box_tag "track_ids[]", track.id, false, :onchange => "toggleButtons();" %></td>
        <td><%= link_to track.title, track_path(track) %></td>
        <td><%= track.genre %></td> 
        <td><%= track.grouping %></td> 
        <td><%= track.composer %></td> 
        <td><%= link_to "Edit", edit_track_path(track) %></td> 
        <td><%= link_to "Delete", track_path(track), :confirm => "Are you sure?", :method => :delete %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
  </div>

  <%= will_paginate @tracks, :params => {:search => @search}%>
  
  <p>
    <%= submit_tag "Group Edit Selected", :id => "group_edit_button" %> <%= submit_tag "Delete Selected", :id => "group_delete_button" %>
  </p>
<% end %>
