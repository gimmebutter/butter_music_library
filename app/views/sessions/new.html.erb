<div id="box">
  <h2>Sign in</h2>

  <% form_for :session, :url => session_path do |form| %>
    <div class="text_field">
      <%= form.label :email %><br/>
      <%= form.text_field :email %>
    </div>
    <br/>
    <div class="text_field">
      <%= form.label :password %><br/>
      <%= form.password_field :password %>
    </div>
    <br/>
    <div class="submit_field">
      <%= form.submit "Sign in", :disable_with => "Please wait..." %>
    </div>
  <% end %>
</div>