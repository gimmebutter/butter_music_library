<div id="box">
<h1>Edit "<%= @track.title %>"</h1>

<% form_for @track, :url => admin_track_path(@track), :html => { :multipart => true, :method => :put } do |f| %>
  <p>
    Current file:<br />
    <audio src="<%= @track.mp3.url %>" controls="controls"></audio>
  </p>
  <p>
    <%= f.file_field :mp3 %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :genre %><br />
    <%= f.text_field :genre %>
  </p>
  <p>
    <%= f.label :grouping %><br />
    <%= f.text_field :grouping %>
  </p>
  <p>
    <%= f.label :composer %><br />
    <%= f.text_field :composer %>
  </p>
  <p>
    <%= f.label :album %><br />
    <%= f.text_field :album %>
  </p>
  <% if @track.duration.blank? %>
    <p>
      <%= f.label :duration %><br />
      <%= f.text_field :duration %>
    </p>
  <% end %>
  <p>
    <%= f.label :tag_list, "Tags (separate by commas)" %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>
</div>