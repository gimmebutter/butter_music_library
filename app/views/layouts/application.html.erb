<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>Butter Music Library</title>
    <%= stylesheet( 'application', 'uploadify', 'jquery-ui-1.7.1.custom') %>
    <%= javascript( 'jquery-1.4.2', 'endlessTable', 'jquery.tablescroll', 'jquery-ui-1.7.1.custom.min', 'jquery.jplayer.min', 'application') %>
    <%= yield(:head) %>
  </head>
  <body>
      <div id="logo"></div>
      <div class="nav">
        <% if signed_in? %>
          Logged in as <%= current_user.email %> 
          &#x2022; <%= link_to "Log Out", sign_out_path %> 
          &#x2022; <%= link_to "Tracks", admin_tracks_path %> 
          <% if current_user.admin? %> 
            &#x2022; <%= link_to "Users", admin_users_path %> 
          <% end %>
          &#x2022; <%= link_to "Upload Tracks", new_admin_track_path %> 
          &#x2022; <%= link_to "RSS", formatted_tracks_path("rss") %>
        <% end %>
      </div>
      
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      
      <%= yield %>
      <div class="clearfix"></div>
  </body>
</html>
